<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tranmanhchung.quanlysinhvien.ViewInfomationAdmin">
<FrameLayout
    android:layout_weight="4"

    android:layout_width="match_parent"
    android:layout_height="0dp">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="390dp"
        android:layout_height="390dp" />

    <EditText
        android:textColor="#00aaff"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="#00aaff"
        android:background="@drawable/custom_login"
        android:hint="ID student"
        android:id="@+id/edtSearch"
        android:layout_width="290dp"
        android:layout_height="35dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:src="@drawable/avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="125dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:textColor="#00aeff"
        android:text="Tran Manh Chung"
        android:textSize="20sp"
        android:id="@+id/txtName"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="145dp"
        android:layout_width="250dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btnSearch"
        android:background="@drawable/custom_login"
        android:layout_marginTop="5dp"
        android:textColor="#00aeff"
        android:text="TÃ¬m"
        android:layout_marginLeft="310dp"
        android:layout_width="60dp"
        android:layout_height="35dp" />

</FrameLayout>
    <LinearLayout

        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <GridView
            android:numColumns="1"
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>
    </LinearLayout>
   <FrameLayout
       android:background="#9d9d90"
       android:id="@+id/listInfomation"
       android:layout_weight="3.8"
       android:layout_width="match_parent"
       android:layout_height="0dp">
   </FrameLayout>
<LinearLayout
    android:background="#9d9d90"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <Button
        android:text="DONE"
        android:textColor="#ffffff"
        android:layout_marginLeft="250dp"
       android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/acceptbutton"
        android:id="@+id/acceptAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</LinearLayout>
